<?xml version="1.0" encoding="utf-8"?>
<us.eiyou.changephone.screenAdaptation.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d80099fd"
    tools:context="us.eiyou.changephone.activity.BrandActivity">
    <us.eiyou.changephone.screenAdaptation.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="37dp"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <EditText
        app:layout_marginTopPercent="2%"
        android:id="@+id/et_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:hint="你想修改成的生产厂家(比如 iphone)"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/et_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:hint="你想修改成的手机型号(比如 7 plus)"
        android:layout_below="@+id/et_manufacturer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/b_sure"
        android:layout_width="0px"
        app:layout_widthPercent="92%w"
        android:layout_height="0px"
        app:layout_heightPercent="25%w"
        android:background="@drawable/selector_ad"
        android:text="我确定！来吧！"
        android:textSize="21dp"
        android:layout_below="@+id/et_model"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text2"
        android:gravity="center"
        android:padding="7dp"
        android:background="@drawable/text_background"
        android:layout_height="0px"
        app:layout_heightPercent="9%w"
        android:layout_width="0px"
        app:layout_widthPercent="52%w"
        android:text="我也是无耻的广告君 =。=\n"
        android:layout_above="@+id/b_ad"
        android:textColor="#0c00ec"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="0px"
        app:layout_widthPercent="92%w"
        android:layout_height="0px"
        app:layout_heightPercent="25%w"
        android:text="我也是广告 =.="
        android:textSize="39dp"
        android:background="@drawable/selector_ad"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/b_ad" />
    </us.eiyou.changephone.screenAdaptation.PercentRelativeLayout>
    <ImageButton
        app:layout_marginTopPercent="1%"
        android:layout_width="0px"
        app:layout_widthPercent="18%w"
        android:layout_height="0px"
        app:layout_heightPercent="12%w"
        android:id="@+id/ib_back"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <WebView
        android:id="@+id/wv_load_brand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</us.eiyou.changephone.screenAdaptation.PercentRelativeLayout>
