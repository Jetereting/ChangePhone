<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d80099fd"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="47dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:gravity="center"
            android:text="看或者不看，商品就在那里,\n\n买或者不买，你就是最亮的那颗星。\n\n做你喜欢的自己,\n\n爱你所爱的Au."
            android:textColor="#7b0231"
            android:textSize="37px" />

        <Button
            android:id="@+id/b_show"
            android:layout_width="333px"
            android:layout_height="456px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"
            android:background="@drawable/selector_function"
            android:onClick="b_show"
            android:text="买前\n请看"
            android:textSize="49dp" />

        <Button
            android:id="@+id/b_buy"
            android:layout_width="333px"
            android:layout_height="456px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/b_show"
            android:background="@drawable/selector_function"
            android:onClick="b_buy"
            android:text="淘宝\n链接"
            android:textSize="49dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="7dp"
        android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:onClick="ib_back" />
</RelativeLayout>
